<div class="page-header">
  <h1>All of the Statuses</h1>
</div>

<%= link_to "Post a New Status", new_status_path, class: "btn btn-success" %>

<% @statuses.each do |status| %>
	<div class="status">
		<div class="row">
			<div class="span1">
			<%= image_tag status.user.gravatar_url %>
			</div>
			<div class="span7"
		  		<strong><%= status.user.full_name %></strong>
		 		 <p><%= link_to status.content, status %></p>
			 		 <div class="meta">
			   			 <%= time_ago_in_words(status.created_at) + " ago" %>
			    		<span class="admin">
			  		</div>
			</div>
		</div>	
	</div>
<% end %>